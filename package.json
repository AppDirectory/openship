    "@shopify/koa-shopify-graphql-proxy": "^2.1.2",
    "apollo-boost": "^0.1.16",
    "babel-core": "^7.0.0-bridge.0",
    "date-fns": "^2.0.0-alpha.7",
    "dotenv-webpack": "^1.7.0",
    "downshift": "^2.2.3",

{
  "name": "openship",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "node server.js",
    "build": "next build",
    "start": "NODE_ENV=production node server -p $PORT",
    "test": "NODE_ENV=test jest --watch",
    "heroku-postbuild": "next build",
    "now-build": "next build"
